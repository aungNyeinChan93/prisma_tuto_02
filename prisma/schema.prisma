generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./app.db"
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  posts    Post[]
  nickname Nickname?

  @@index([email])
}

model Post {
  id         Int        @id @default(autoincrement())
  title      String
  user       User       @relation(fields: [userId], references: [id])
  userId     Int
  comments   Comment[]
  categories Category[]

  @@index([title])
}

model Nickname {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int    @unique
  name   String @unique
}

model Comment {
  id     Int    @id @default(autoincrement())
  body   String
  post   Post   @relation(fields: [postId], references: [id])
  postId Int
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[]
}
